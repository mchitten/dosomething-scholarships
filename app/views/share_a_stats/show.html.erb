<%= breadcrumb %>

<% cache [@share_a_stat.id, @share_a_stat.updated_at.to_i] do %>
  <h1><%= @share_a_stat.title %></h1>
  <%= simple_format @share_a_stat.message %>
  <%= render 'share' %>
<% end %>

<% if has_role?('administrator') || has_role?('staff') %>
  <%= link_to 'Edit', edit_share_a_stat_path(@share_a_stat) %> |
  <%= link_to 'Back', share_a_stats_path %>
<% end %>
