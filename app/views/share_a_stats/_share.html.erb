<div id="share-a-stat-container">
  <h3>Share this stat with six friends for a chance to win a</h3>
  <h3>$2000 scholarship</h3>

  <h3 class="tip"><%= @share_a_stat.tip %></h3>

  <%= simple_form_for(@post, html: { multipart: true, class: 'form form-submit right' }) do |f| %>
    <%= f.hidden_field :share_a_stat_id, value: @share_a_stat.id %>
    <div id="your-info">
      <%= f.input :my_name, label: false, input_html: { placeholder: 'Your Name' }, wrapper_html: { class: 'my-name' } %>
      <%= f.input :my_number, label: false, input_html: { placeholder: "Your Cell #" }, wrapper_html: { class: 'my-number' } %>
    </div>
    <div id="friends-info">
      <% (1..6).each do |n| %>
        <%= f.input :"friend_#{n}", label: false, input_html: { placeholder: "Friend's Cell #" }, wrapper_html: { class: 'friend-number' } %>
      <% end %>
    </div>

    <%= f.submit 'Submit', class: 'btn primary medium' %>
    <p class="legal"><%= link_to 'Official Rules', @share_a_stat.rules %>. Msg & data rates may apply. Text STOP to opt-out, HELP for help.</p>
  <% end %>
</div>
